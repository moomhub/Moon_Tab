{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node"
    ],
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}